<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="180dp"
            android:layout_height="41dp"
            android:ems="10"
            android:id="@+id/expenseName"
            android:inputType="text"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="39dp" android:layout_marginRight="39dp"/>
    <TextView
            android:text="Expense Name"
            android:layout_width="144dp"
            android:layout_height="67dp" android:id="@+id/textView"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Amount Spend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp" android:layout_marginTop="93dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="439dp" app:layout_constraintVertical_bias="0.466"/>
    <EditText
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/Amount"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/expenseName" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginLeft="43dp" android:layout_marginStart="43dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="39dp" android:layout_marginRight="39dp"
            app:layout_constraintHorizontal_bias="0.65"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/save" android:textSize="18sp"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/Amount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="284dp" android:layout_marginStart="284dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="97dp"
            android:layout_marginRight="97dp"/>
</android.support.constraint.ConstraintLayout>